<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imagen_comida_detail"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_category_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagen_comida_detail"
        app:layout_constraintTop_toTopOf="@+id/imagen_comida_detail"
        tools:text="titulo de la comida" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/boton_detalle_detail"
        android:layout_marginTop="20dp"
        android:text="Ver comidas"
        android:textSize="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/text_category_detail"
        app:layout_constraintStart_toStartOf="@+id/text_category_detail"
        app:layout_constraintTop_toBottomOf="@+id/text_category_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>